    <children>
        <ToolBar prefHeight="40.0" prefWidth="1260.0">
            <items>
                <Button mnemonicParsing="false" onAction="#onBackAction" text="返回" />
                <Region fx:id="topLeft" />
                <Label text="取件" />
                <Region fx:id="topRight" />
                <Label fx:id="lblTimer" text="99" />
            </items>
        </ToolBar>
        <HBox prefHeight="200.0" prefWidth="200.0">
            <children>
                <GridPane prefHeight="100.0" prefWidth="1135.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="494.0" minWidth="10.0" prefWidth="494.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="322.0" minWidth="10.0" prefWidth="48.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="322.0" minWidth="10.0" prefWidth="304.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label fx:id="lblBoxNumber" text="您有3个信包" GridPane.halignment="CENTER">
                            <padding>
                                <Insets top="30.0" />
                            </padding>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#onUserView" prefHeight="43.0" prefWidth="309.0" text="帐户信息" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="CENTER" />
                  <Label fx:id="lblBoxList" text="Label" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </children>
        </HBox>

        <GridPane prefHeight="764.0" prefWidth="1230.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="161.0" minWidth="10.0" prefWidth="45.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="381.0" minWidth="10.0" prefWidth="355.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" prefWidth="365.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="337.0" minWidth="10.0" prefWidth="337.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="170.0" minWidth="10.0" prefWidth="31.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="openDoorButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#openDoorAction" prefHeight="214.0" prefWidth="331.0" text="开门" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                    <graphic>
                        <ImageView fitHeight="127.0" fitWidth="107.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/resources/images/button/mail.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
            <Label fx:id="lblOpenMessage" styleClass="label-title" text="箱门已经打开，请取出物品后关好箱门。" GridPane.columnIndex="1" GridPane.columnSpan="3" />
            </children>
        </GridPane>
      <Label fx:id="lblNotify" />
    </children>
</VBox>
